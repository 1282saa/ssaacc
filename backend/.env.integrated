# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# FinKuRN Integrated System - Environment Variables
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# user-management + v1-chatbot-complete 통합 환경 설정
# 이 파일을 복사해서 .env 파일로 사용하세요: cp .env.integrated .env

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 1. AWS Bedrock 설정 (기존 v1-chatbot-complete 브랜치 설정)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# AWS Credentials
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# AWS Bedrock Model Configuration
# Claude 3.5 Sonnet 모델 설정
CLAUDE_MODEL_ID=us.anthropic.claude-3-5-sonnet-20240620-v1:0
CLAUDE_MAX_TOKENS=4000
CLAUDE_TEMPERATURE=0.7

# AWS Titan 임베딩 모델 설정
EMBEDDING_MODEL_ID=amazon.titan-embed-text-v1
EMBEDDING_DIMENSIONS=1536

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 2. PostgreSQL Database 설정 (정책 데이터 + 사용자 데이터)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# PostgreSQL Connection (기존 정책 데이터가 있는 DB)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=finkurn
DB_USER=postgres
DB_PASSWORD=finkurn2024

# SQLAlchemy Database URL (user-management 용)
DATABASE_URL=postgresql://postgres:finkurn2024@localhost:5432/finkurn

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 3. JWT Authentication 설정 (user-management)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# JWT 시크릿 키 (운영 환경에서는 복잡한 랜덤 문자열로 변경)
SECRET_KEY=your-super-secret-jwt-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 4. Google OAuth 설정 (user-management)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Google OAuth 2.0 Credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8081

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 5. Application Settings
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Environment
ENV=development

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS Origins (React Native Metro bundler)
CORS_ORIGINS=http://localhost:8081,http://localhost:19006,exp://192.168.1.100:8081

# Logging
LOG_LEVEL=INFO
ENABLE_DETAILED_LOGGING=true

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 6. Feature Flags
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# 통합 기능 활성화
ENABLE_USER_MANAGEMENT=true
ENABLE_PERSONALIZED_CHAT=true
ENABLE_ONBOARDING_CONTEXT=true

# Vector Search Configuration
VECTOR_SIMILARITY_THRESHOLD=0.1
VECTOR_SEARCH_TOP_K=5

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 7. Optional: Direct API Fallback (Bedrock 사용 불가 시)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Anthropic Direct API (Bedrock이 없는 경우 대안)
# ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-key

# OpenAI API (임베딩 대안)
# OPENAI_API_KEY=sk-your-openai-key