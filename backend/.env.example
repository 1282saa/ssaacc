# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# FinKuRN Backend - Environment Variables
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 이 파일을 복사해서 .env 파일을 만드세요: cp .env.example .env

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# LLM 설정 (AWS Bedrock vs Direct API)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# AWS Bedrock 사용 여부 (권장: true)
# - true: AWS Bedrock Claude + Titan Embeddings 사용
# - false: Direct Anthropic API + OpenAI Embeddings 사용
USE_AWS_BEDROCK=true

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# AWS Bedrock 설정 (USE_AWS_BEDROCK=true인 경우 필수)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# AWS Access Key (IAM 사용자)
# 예: AKIAIOSFODNN7EXAMPLE
AWS_ACCESS_KEY_ID=your-aws-access-key-id

# AWS Secret Access Key
# 예: wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# AWS Region (Bedrock 사용 가능한 리전)
# 지원 리전: us-east-1, us-west-2, eu-west-1 등
AWS_REGION=us-east-1

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Direct API 설정 (USE_AWS_BEDROCK=false인 경우 필수)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Anthropic API Key (Claude Direct API)
# 예: sk-ant-api03-...
ANTHROPIC_API_KEY=sk-ant-api03-your-key

# OpenAI API Key (Embeddings)
# 예: sk-...
OPENAI_API_KEY=sk-your-openai-key

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Database Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Milvus Vector DB
MILVUS_HOST=localhost
MILVUS_PORT=19530

# Neo4j Graph DB
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Authentication & OAuth
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# JWT 설정
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Application Settings
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Environment (development, production)
ENV=development

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# Logging
LOG_LEVEL=DEBUG

# CORS (프론트엔드 URL)
CORS_ORIGINS=http://localhost:8081,http://localhost:19006

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# AI Model Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Claude Model
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=4000
CLAUDE_TEMPERATURE=0.7

# Embedding Model
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSIONS=3072

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Feature Flags
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Phase 2 기능 활성화
ENABLE_NEO4J=false
ENABLE_CYPHER_AGENT=false

# 로깅
ENABLE_DETAILED_LOGGING=true
